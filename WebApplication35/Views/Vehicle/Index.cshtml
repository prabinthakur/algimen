@model IEnumerable<WebApplication35.Models.viewModel.vehicleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("addVehicel","Vehicle")">Add vehicle</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.vehicleid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vehicletype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vehicleNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vehiclePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.vehicleid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vehicletype)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vehicleNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.vehiclePrice)
        </td>
        <td>

            <img src="~/photo/@item.photo" height="50"/>
        </td>
        <td>
            @if (User.IsInRole("Customer"))
            {
                @Html.ActionLink("hirevehicle", "hirevehicle", new { id = item.vehicleid })
            }
            
          
        </td>
    </tr>
}

</table>
